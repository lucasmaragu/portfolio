---
import ExperienceItem from "./ExperienceItem.astro";

const EDUCATION = [
  {
    date: "September 2025",
    dateEs: "Septiembre 2025",
    title: "BSc in Computer Science",
    titleEs: "Grado en Ingeniería Informática",
    company: "Universitat Oberta de Catalunya (UOC)",
    description: "Enrolled next year in the UOC's Bachelor's Degree in Computer Engineering, with a focus on software development, databases, and web technologies.",
    descriptionEs: "Matriculado para el próximo año en el Grado en Ingeniería Informática de la UOC, con especialización en desarrollo de software, bases de datos y tecnologías web.",
    tags: [],
  },
  {
    date: "September 2023 - May 2025",
    dateEs: "Septiembre 2023 - Mayo 2025",
    title: "Higher Degree in Web Application Development",
    titleEs: "Grado Superior en Desarrollo de Aplicaciones Web",
    company: "Monlau Formación Profesional",
    description: " Specialized training in web application development, design, and deployment, including technologies such as PHP (Laravel), JavaScript (Node.js, React, Angular, Vue.js), SQL and NoSQL databases, among other technologies and methods.",
    descriptionEs: " Formación especializada en el desarrollo, diseño y despliegue de aplicaciones web, incluyendo tecnologías como PHP (Laravel), JavaScript (Node.js, React, Angular, Vue.js), bases de datos SQL y NoSQL, entre otras tecnologías y métodos.",
    tags: [],
  },
];
---

<div class="relative py-12">
  <div class="absolute inset-0 -z-10">
    <div class="absolute bottom-1/3 left-1/4 w-64 h-64 bg-blue-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="space-y-12">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-8 flex items-center">
      <span class="bg-gradient-to-r from-blue-600 to-teal-500 bg-clip-text text-transparent lang-es">Educación</span>
      <span class="bg-gradient-to-r from-blue-600 to-teal-500 bg-clip-text text-transparent lang-en">Education</span>
      <div class="h-px flex-grow bg-gradient-to-r from-blue-600 to-transparent ml-4"></div>
    </h2>

    <div class="space-y-8">
      {EDUCATION.map((education) => (
        <ExperienceItem
          title={education.title}
          titleEs={education.titleEs}
          company={education.company}
          description={education.description}
          descriptionEs={education.descriptionEs}
          date={education.date}
          dateEs={education.dateEs}
          tags={education.tags}
        />
      ))}
    </div>
  </div>
</div>
